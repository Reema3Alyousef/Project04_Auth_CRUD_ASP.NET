@model HallModel

<div style="width: 70%;
        align-content: center;">

    <form asp-action="Create" method="post" class="form-horizontal">

        <div class="form-group">
            <label style="color: azure" asp-for="Name">Name</label>
            <div>
                <input class="form-control" asp-for="Name" required />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Capacity" style="color: azure">Capacity</label>
            <div>
                <input class="form-control" asp-for="Capacity" />
            </div>
        </div>
        <div class="form-group" style="display: inline-block">
            <label asp-for="Avaliability" style="color: azure">Avaliability</label>
            <div>
                <input class="form-control" asp-for="Avaliability" />
            </div>
        </div>
        <div>
            <br />
            <input type="submit" class="btn btn-success" value="Submit" style="width:200px; margin-inline-start:58%">
        </div>
    </form>
</div>