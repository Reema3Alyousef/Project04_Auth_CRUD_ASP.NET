@{
    var attendees = (List<AttendeeModel>)ViewBag.Attendees;

}

<style type="text/css">
    .btn-circle {
        width: 40px;
        height: 40px;
        padding: 6px 0px;
        border-radius: 50%;
        text-align: center;
        line-height: 1.42857;
        text-decoration: none;
        display: inline-block;
        font-size: 20px;
    }
</style>
@*//To search for the attendees of a specific event*@
<form class="form-inline my-3" asp-action="Search" asp-controller="Attendees" style="margin-inline-start:37%;">
    <input class="form-control mr-sm-2" typeof="search" name="id" placeholder="Search for an event" aria-lable="" />
    <button class="btn btn-outline-info" type="submit">Search</button>
</form>

<table class="table table-borderless table-dark" style="width: 100%; margin: 0px;">
    <thead style="background-color: black; text-align: center;">
        <tr style="width: 100%; margin: 0px;text-align: center;">
            <th scope="col">ID </th>
            <th scope="col">Name </th>
            <th scope="col">Email </th>
            <th scope="col">Phone </th>
            <th scope="col">Field </th>
            <th scope="col">Event ID </th>
            <th scope="col">Edit </th>
            <th scope="col">Delete</th>
            <th scope="col"><a asp-controller="Attendees" asp-action="Create" class="btn btn-success btn-circle"><strong>+</strong></a></th>
        </tr>
    </thead>
    @foreach (var item in attendees)
    {

        <tbody style="background-color: black;">
            <tr style="width: 100%; margin: 0px; text-align: center; background-color: black;">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Field</td>
                <td>@item.EventId</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Attendees" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <form method="post" asp-controller="Attendees" asp-action="Delete" asp-route-id="@item.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
                <td></td>
            </tr>
        </tbody>
    }
</table>

